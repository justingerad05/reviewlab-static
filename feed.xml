---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>Honest Product Review Lab</title>
    <link>https://justingerad05.github.io/reviewlab-static/</link>
    <description>Latest product reviews and tech insights</description>

    {% for post in collections.posts | reverse %}
    <item>
      <title>{{ post.data.title | xml_escape }}</title>
      <link>https://justingerad05.github.io{{ post.url }}</link>
      <guid>https://justingerad05.github.io{{ post.url }}</guid>
      <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
      <description><![CDATA[
        {{ post.templateContent | truncate(300) }}
      ]]></description>
    </item>
    {% endfor %}

  </channel>
</rss>
